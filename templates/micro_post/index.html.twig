{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}

    <div>
        {% if posts|length > 0 %}
            {% for post in posts %}
                <div>
                    <a href="{{ path('app_micropost_show', {post: post.id}) }}">
                        {{ post.title }}
                    </a>
                </div>

            {% endfor %}
        {% else %}
            <div> Nothing to show</div>
        {% endif %}
    </div>
{% endblock %}
